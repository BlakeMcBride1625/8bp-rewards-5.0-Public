{
  "name": "8bp-rewards",
  "version": "1.0.0",
  "description": "8 Ball Pool Rewards Bot - Automates claiming free cue pieces and daily rewards with Discord integration",
  "main": "dist/8bp-claimer.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/8bp-claimer.js",
    "run-once": "node dist/run-once.js",
    "dev": "ts-node src/8bp-claimer.ts",
    "dev-once": "ts-node src/run-once.ts",
    "clean": "rm -rf dist",
    "claim": "node playwright-claimer.js",
    "claim-discord": "node playwright-claimer-discord.js",
    "schedule": "node playwright-claimer.js --schedule",
    "schedule-discord": "node playwright-claimer-discord.js --schedule",
    "test-discord": "node test-discord.js",
    "test-mongodb": "node test-mongodb.js",
    "migrate-mongodb": "node scripts/migrate-to-mongodb.js",
    "setup-mongodb": "./setup-mongodb.sh",
    "bot": "node discord-bot.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [
    "8ball-pool",
    "automation",
    "web-scraping",
    "puppeteer"
  ],
  "author": "Blake McBride",
  "license": "MIT",
  "dependencies": {
    "canvas": "^3.2.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "mongoose": "^8.18.2",
    "node-cron": "^3.0.3",
    "playwright": "^1.55.1",
    "puppeteer": "^21.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
